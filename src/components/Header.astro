---
import ThemeToggle from "./ThemeToggle.jsx";
import { tempVar } from "../stores/Settings";
import { SITE_TITLE } from "../consts";
import SearchBar from "./SearchBar";

const { geez } = Astro.props;
---

<script is:inline>
    const theme = localStorage.getItem("theme");
    // document.documentElement.classList.add("dark");
    if (
        (theme === "auto" &&
            window.matchMedia("(prefers-color-scheme: dark)").matches) ||
        theme === "dark"
    ) {
        document.documentElement.classList.add("dark");
    } else {
        document.documentElement.classList.remove("dark");
    }
</script>
<header class="bg-light_primary dark:bg-dark_primary w-screen m-auto p-4 relative dark:bg-opacity-50 bg-opacity-50 backdrop-contrast-100">
    <nav class="flex lg:justify-between items-center lg:w-3/4 m-auto">
        <h1 class="flex shrink w-fit">
            <a class="h-min" href="/">MTG Card Search Site!</a>
        </h1>
        <div class="flex md:grow lg:grow max-w-2xl mx-3">
            <SearchBar client:visible />
        </div>
        <ThemeToggle client:visible />
    </nav>
</header>
